<!DOCTYPE html>
<html>
<head>
  <title>Artista3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <nav class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Artista", root_path, class: "navbar-brand" %>
        </div> 
       
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Event Share <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Upcoming Events", blog_posts_path %></li> 
           <!--  <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li> -->
            <li role="separator" class="divider"></li>
            <li><%= link_to "create an event post", new_blog_post_path%></li>
            <li role="separator" class="divider"></li>
          </ul>
        </li>
            <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">In-Progress <span class="caret"></span></a>
          <ul class="dropdown-menu">
              <li><%= link_to "Open Projects", project_posts_path%></li>
       <!--        <li><a href="#">Another action</a></li> -->
              <li role="separator" class="divider"></li>
                <li><%= link_to "create a project post", new_project_post_path %></li>
              <li role="separator" class="divider"></li>
          </ul>
        </li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
              </div> <!-- close form group -->
            <button type="submit" class="btn btn-default">Submit</button>
          </form> <!-- close navar-left -->
          </ul> 
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
        <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
                <li><%= link_to "Welcome, #{current_user.name.upcase}!", user_profile_path(id: current_user.id) %></li>
          
                <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
             </ul>
               <% end %>
         
                    
                  </div><!-- /.nav-collapse -->  
           </nav><!-- /.navbar -->
         </div>
      </div><!--/row-->
     </div><!--/.col-xs-12.col-sm-9-->
   <br>
</div><!--/.container-->



<div>
<%= yield %>
</div>
</body>
</html>
